<h1 class="text-center"> Students</h1>
<div class="container text-center">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Birth Date</th>
        <th scope="Delete">Email</th>
        <th scope="col">Edit</th>
        <th scope="Delete">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.id  %></td>
          <td>
            <%= link_to student.first_name, student_path(student)%>
          </td> 
          <td><%= student.last_name  %></td>
          <td><%= student.dob  %></td>
          <td><%= student.email  %></td>
          <td><%= link_to "Edit", edit_student_path(student),class: 'btn btn-warning'%></td>
          <td><%= link_to "Delete", student_path(student), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"},class: 'btn btn-danger'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add Student", new_student_path(),class: 'btn btn-primary'%>
</div>
