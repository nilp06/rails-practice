<h1 class="text-center">Student</h1>
<div class="container text-center">
  <table class="table table-secondary">
    <tbody>
      <tr>
        <th scope="col">ID</th>
        <th scope="col"><%= @student.id %></th>
      </tr>
      <tr>
        <th scope="col">First Name</th>
        <th scope="col"><%= @student.first_name %></th>
      </tr>
      <tr>
        <th scope="col">Last Name</th>
        <th scope="col"><%= @student.last_name %></th>
      </tr>
      <tr>
        <th scope="col">Email</th>
        <th scope="col"><%= @student.email %></th>
      </tr>
      <tr>
        <th scope="col">Phone Number</th>
        <th scope="col"><%= @student.phone_number %></th>
      </tr>
      <tr>
        <th scope="col">Date of Birth</th>
        <th scope="col"><%= @student.dob %></th>
      </tr>
      <tr>
        <th scope="col">Department</th>
        <th scope="col"><%= @student.department %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to "All Student", students_path,class: 'btn btn-primary m-3'%>
</div>
