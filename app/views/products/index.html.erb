<h1 class="text-center">Products</h1>
<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <% if is_admin? %>
          <th scope="col">Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <% if is_admin? %>
            <td><%= link_to "Show", product_path(product), class:"btn btn-success"%>
              <%= link_to "Edit", edit_product_path(product), class:"btn btn-info"%>
              <%= link_to "Delete", product_path(product),data:{ turbo_method: :delete, turbo_confirm: "Are You Sure Want To Delete?"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if is_admin? %>
    <%= link_to "Add Product", new_product_path, class:"btn btn-primary"%>
  <% end %>
</div>
