<div class="container">
  <h1 class="text-center my-2">Product Show Page</h1>
  <table class="table table-primary">
    <tbody>
      <tr>
        <td>Title</td>
        <td><%= @product.title %></td>
      </tr>
      <tr>
        <td>Description</td>
        <td><%= @product.description %></td>
      </tr>
      <tr>
        <td>Price</td>
        <td><%= @product.price %></td>
      </tr>
    </tbody>
  </table>
  <% if is_admin? %>
    <%= link_to "Edit", edit_product_path(@product), class:"btn btn-info"%>
    <%= link_to "Delete", product_path(@product), data:{ turbo_method: :delete, turbo_confirm: "Are You Sure Want To Delete?"}, class:"btn btn-danger" %>
  <% end %>
  <%= link_to "Back", products_path, class:"btn btn-warning" %>
</div>
