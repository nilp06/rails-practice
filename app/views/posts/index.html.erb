<%= turbo_frame_tag "mainframe" do %>
  <h1 class="text-center">Posts</h1>
  <div class="container">
    <div class="row">
      <%= link_to "Add Post", new_post_path, class:"btn btn-primary"%>
    </div>
    <div class="table-responsive">
      <table class="table table-primary">
        <tbody>
          <%= turbo_frame_tag "posts" do %>
            <%= render @posts %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
