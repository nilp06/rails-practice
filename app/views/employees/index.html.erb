<h1 class="text-center"> Employees</h1>
<div class="container text-center">
  <%= form_with url: search_path, method: :get, class: "row mb-4 mt-4" do |form|  %>
    <div class="col-sm-10">
      <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="col-sm-2 text-start">
      <%= form.submit "Search", class: "btn btn-primary" %>
    </div>
  <% end %>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Orders</th>
        <th scope="col">Availability</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td>
            <%= employee.first_name+" "+employee.last_name %>
          </td>
          <td><%= employee.email  %></td>
          <td>
            <%= link_to order_change_path(employee,flag: "1") do%>
              <span>
                <i class="bi bi-arrow-up-circle-fill"></i>
              </span>
            <% end %>
            <%= employee.no_of_order %>
            <%= link_to order_change_path(employee,flag: "-1") do%>
              <span>
                <i class="bi bi-arrow-down-circle-fill"></i>
              </span>
            <% end %>
          </td>
          <td>
            <% if employee.full_time_available %>
              <span class="badge bg-success">Available</span>
            <% else %>
              <span class="badge bg-danger">Not Available</span>
            <% end %>
          </td>
          <td>
            <%= link_to "Show", employee_path(employee), class:'btn btn-primary'%>
            <%= link_to "Edit", edit_employee_path(employee), class: 'btn btn-info'%>
            <%= link_to "Delete", employee_path(employee), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"}, class: 'btn btn-danger'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add Employee", new_employee_path(), class: 'btn btn-primary'%>
</div>
