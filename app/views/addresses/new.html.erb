<div class="container">
  <h1 class="text-center">Add Address</h1>
  <%= form_with(model: @address, url: add_address_path, data: {turbo: false}) do |form| %>
    <div class="mb-3">
      <%= form.label :line1, class: "form-label" %>
      <%= form.text_field :line1, class: "form-control", placeholder: "Enter line1"  %>
    </div>
    <div class="mb-3">
      <%= form.label :line2, class: "form-label" %>
      <%= form.text_field :line2, class: "form-control", placeholder: "Enter line2"  %>
    </div>
    <div class="mb-3">
      <%= form.label :area, class: "form-label" %>
      <%= form.text_field :area, class: "form-control", placeholder: "Enter area"  %>
    </div>
    <div class="mb-3">
      <%= form.label :city, class: "form-label" %>
      <%= form.text_field :city, class: "form-control", placeholder: "Enter city"  %>
    </div>
    <div class="mb-3">
      <%= form.label :state, class: "form-label" %>
      <%= form.text_field :state, class: "form-control", placeholder: "Enter state"  %>
    </div>
    <%= form.submit "Add Address", class:"btn btn-primary text-center"%>
  <% end %>
</div>
