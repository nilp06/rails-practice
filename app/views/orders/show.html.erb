<h1 class="text-center">Order</h1>
<div class="container">
  <table class="table table-secondary">
    <tbody>
      <tr>
        <td scope="col">Title</td>
        <td scope="col"><%= @product.title %></td>
      </tr>
      <tr>
        <td scope="col">Quantity</td>
        <td scope="col"><%= @order.quantity %></td>
      </tr>
      <tr>
        <td scope="col">Price</td>
        <td scope="col"><%= @product.price %></td>
      </tr>
      <tr>
        <td scope="col">Capacity</td>
        <td scope="col"><%= @order.total_price %></td>
      </tr>
      <tr>
        <td scope="col">Status</td>
        <td scope="col">
          <% case @order.status 
		   when "booked" %>
          <span class="badge bg-success">Booked</span>
          <% when "canceled" %>
          <span class="badge bg-warning">Canceled</span>
        <% end %></td>
    </tr>
  </tbody>
</table>
<%= link_to "All Orders", product_orders_path(@order.product),class: 'btn btn-primary m-3'%>
</div>
<h1 class="text-center">Customer Details</h1>
<div class="container">
  <table class="table table-secondary">
    <tbody>
      <tr>
        <td scope="col">First Name</td>
        <td scope="col"><%= @customer.first_name %></td>
      </tr>
      <tr>
        <td scope="col">Last Name</td>
        <td scope="col"><%= @customer.last_name %></td>
      </tr>
      <tr>
        <td scope="col">Email</td>
        <td scope="col"><%= @customer.email %></td>
      </tr>
      <tr>
        <td scope="col">Phone Number</td>
        <td scope="col"><%= @customer.phone_number %></td>
      </tr>
    </tbody>
  </table>
</div>
